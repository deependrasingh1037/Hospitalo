<% layout('layouts/boilerplate')%>

    <div class="container d-flex justify-content-center align-items-center  mb-4">
        <div class="row">
            <div class="col-md-6">
                <img src="/img/login.png" class="img-fluid" alt="Register Pic" data-aos="fade-right">
            </div>
            <div class="col-md-5" data-aos="fade-left">
                <h3>Login</h3>
                <form action="/login" method="POST" class="validated-form" novalidate>
                    <div class="mb-3 mt-5">
                        <h5><label class="form-label" for="username">Username</label></h5>
                        <input class="form-control" type="text" id="username" name="username" required autofocus>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <div class="mb-3">
                        <h5><label class="form-label" for="password">Password</label></h5>
                        <input class="form-control" type="password" id="password" name="password" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <button class="btn btn-primary btn-block">Login</button>
                </form>
            </div>
        </div>
    </div>